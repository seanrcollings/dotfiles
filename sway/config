# Start a terminal
bindsym $mod+Return exec alacritty

# Open Obsidian
bindsym Mod1+o exec obsidian 

# Open Chrome
bindsym Mod1+c exec firefox
bindsym Ctrl+Mod1+c exec "killall chrome && google-chrome-stable"

# Open VS Code
bindsym Mod1+v exec code

# Screenshots
# Goes to clipboard
bindsym Print exec grim -g "$(slurp -d)" - | wl-copy
# Gets saved in ~/Pictures/Screenshots
bindsym Alt+Print exec grim -g "$(slurp -d)" $(xdg-user-dir PICTURES)/Screenshots/$(date +'%s_grim.png')
# Screenshots the focused display
bindsym Control+Alt+Print exec grim -o $(swaymsg -t get_outputs | jq -r '.[] | select(.focused) | .name') $(xdg-user-dir PICTURES)/Screenshots/$(date +'%s_grim_display.png')

# Recording
bindsym Control+Mod1+R exec $scripts/record.bash

# lock the screen
bindsym Control+Mod1+l exec "swaylock"

# put system to sleep
bindsym Control+Mod1+s exec "systemctl suspend"

# Opens Bluetooth Menu
bindsym Control+Mod1+b exec "/home/sean/.local/bin/bluemng toggle"

