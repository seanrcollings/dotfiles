set $mod Mod4
set $background /home/sean/Pictures/wallpapers/outer_wilds_2.png
set $scripts /home/sean/.config/sway/scripts

exec $scripts/xdg-desktop-fix
exec $scripts/displays

# Startup the clipboard
exec wl-paste -n -t text --watch clipman store --max-items=30

# Notifcation Daemon
exec mako

# Startup Authentication agent
#exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# set background
output "*" bg $background fill


exec swayidle -w \
	timeout 300 'swaylock -f' \
	timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
	before-sleep 'swaylock -f'

bar {
    swaybar_command waybar
}


set $laptop eDP-1
bindswitch --reload --locked lid:on output $laptop disable
bindswitch --reload --locked lid:off output $laptop enable

output eDP-1 scale 1.2 pos 0 1440

set $gnome-schema org.gnome.desktop.interface
exec_always {
    gsettings set $gnome-schema gtk-theme 'Matcha-dark-azul'
    gsettings set $gnome-schema icon-theme 'Numix-Circle'
    gsettings set $gnome-schema cursor-theme 'volantes_cursors'
    gsettings set $gnome-schema font-name 'Droid Sans 12'
}

